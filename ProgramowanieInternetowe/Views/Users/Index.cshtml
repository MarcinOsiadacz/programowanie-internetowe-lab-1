@model IEnumerable<ProgramowanieInternetowe.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>User Management</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        <a class="btn btn-default" href="@Url.Action("Details", "Users", new { id = item.Id })">
            <span class="glyphicon glyphicon-info-sign"></span>
        </a>
        <a class="btn btn-default" href="@Url.Action("Edit", "Users", new { id = item.Id })">
            <span class="glyphicon glyphicon-edit"></span>
        </a>
        <a class="btn btn-default" href="@Url.Action("Delete", "Users", new { id = item.Id })">
            <span class="glyphicon glyphicon-trash"></span>
        </a>
    </td>
</tr>
}
</table>
